{
  "manifest_version": 3,
  "name": "TrustScan - AI Job & Resume Analyzer",
  "version": "2.0.0",
  "description": "Intelligent analysis of job listings and resumes",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.internshala.com/*",
    "*://*.naukri.com/*",
    "*://*.indeed.com/*",
    "*://*.glassdoor.com/*",
    "*://*.wellfound.com/*",
    "*://*.monster.com/*",
    "*://*.google.com/*",
    "*://*.drive.google.com/*",
    "*://*.dropbox.com/*",
    "*://*.githubusercontent.com/*",
    "*://*.flowcv.com/*",
    "*://*.flowcv.io/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [{
    "matches": [
      "*://*.linkedin.com/*",
      "*://*.internshala.com/*",
      "*://*.naukri.com/*",
      "*://*.indeed.com/*",
      "*://*.glassdoor.com/*",
      "*://*.wellfound.com/*",
      "*://*.monster.com/*",
      "*://*.google.com/*",
      "*://*.drive.google.com/*",
      "*://*.dropbox.com/*",
      "*://*.githubusercontent.com/*",
      "*://*.flowcv.com/*",
      "*://*.flowcv.io/*"
    ],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-job-analyzer@example.com"
    }
  }
}